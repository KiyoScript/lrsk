<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="row justify-content-center align-items-center">
    <div class="col-12 col-lg-7 d-none d-lg-block">
      <%= image_tag("change.svg", class: "img-fluid") %>
    </div>
    <div class="col-12 col-lg-5">
      <div class="row container d-flex align-items-center justify-content-center">
        <div class="col-12">
           <div class="text-center">
            <h2 class="text-light">Change your password</h2>
            <p class="text-light">To change your password, please enter your new password below. We'll update your account with the new password.</p>
          </div>
        </div>
        <div class="col-12">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <div class="form-group">
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control', placeholder: 'New Password', style: 'border-radius: 5rem;' %>
            </div>
            <div class="form-group">
                <br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Confirm New Password', style: 'border-radius: 5rem;' %>
            </div>
            <div class="form-group mt-4">
              <%= f.submit "Change my password", class: "btn btn-primary btn-block w-100", style: 'border-radius: 5rem;' %>
            </div>
          <% end %>
          <hr>
        </div>
        <div class="col-12 d-flex align-items-center justify-content-center flex-column">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
