<%= form_with model: staff, url: dashboard_staff_path(staff.id), html: { method: :patch, class: "d-flex flex-column", novalidate: true }  do |f| %>
  <div class="mb-3">
    <%= f.label :firstname, class: "form-label" %>
    <%= f.text_field :firstname, autocomplete: "firstname", class: "form-control", value: staff.firstname %>
  </div>

  <div class="mb-3">
    <%= f.label :lastname, class: "form-label" %>
    <%= f.text_field :lastname, autocomplete: "lastname", class: "form-control", value: staff.lastname %>
  </div>

  <div class="mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, autocomplete: "email", class: "form-control", required: true %>
    <div class="invalid-feedback">Invalid email</div>
  </div>

  <div class="mb-3">
    <%= f.label :gender, class: "form-label" %>
    <%= f.select :gender, User.genders.keys.map { |key| [key.humanize, key] }, { }, class: 'form-select', id: 'gender' %>
  </div>

   <div class="mb-3">
    <%= f.label :role, class: "form-label" %>
    <%= f.select :role, User.roles.keys.map { |key| [key.humanize, key] }, { }, class: 'form-select', id: 'role' %>
  </div>

  <div class="mt-4 align-self-end">
    <%= f.submit "Update", class: "btn btn-primary" %>
  </div>
<% end %>
