<%= form_with model: @physician, url: dashboard_physicians_path, method: :post, html: { class: 'row' } do |form| %>
  <div class='col-12'>
    <div class='row gap-4 mb-4'>
      <div class='col-12'>
        <div class='card shadow-sm'>
          <div class='card-header collapsible cursor-pointer rotate' data-bs-toggle='collapse' data-bs-target='#kt_docs_card_collapsible'>
            <h3 class='card-title fs-1'><strong>New Doctor</strong></h3>
            <div class='card-toolbar rotate-180'>
              <%= bootstrap_icon 'pencil-square', class: 'text-primary' %>
            </div>
          </div>
          <div id='kt_docs_card_collapsible' class='collapse show'>
            <div class='card-body px-10'>
              <div class='col-12 mb-7'>
                <label for="email_address" class="form-label fs-3">Email Address: </label>
                <%= form.text_field :email_address, class: 'form-control fs-3', placeholder: 'johnlloyddesape@gmail.com' %>
              </div>
              <div class='col-12 mb-7'>
                <label for="firstname" class="form-label fs-3">First Name: </label>
                <%= form.text_field :firstname, class: 'form-control fs-3', placeholder: 'John Lloyd' %>
              </div>

              <div class='col-12 mb-7'>
                <label for="middle_initial" class="form-label fs-3">Middle Initial: </label>
                <%= form.text_field :middle_initial, class: 'form-control fs-3', placeholder: 'D.' %>
              </div>

              <div class='col-12 mb-7'>
                <label for="lastname" class="form-label fs-3">Last Name: </label>
                <%= form.text_field :lastname, class: 'form-control fs-3', placeholder: 'de Sape' %>
              </div>

              <div class='col-12 mb-7' >
                <%= form.label 'Age:', class: 'form-label fs-3'%>
                <%= form.number_field :age, class: 'form-control fs-3', min: 0, max: 100, placeholder: '18' %>
              </div>

              <div class='col-12 mb-7'>
                <%= form.label 'Gender:', class: 'form-label fs-3'%>
                <% Physician.genders.keys.each do |key| %>
                  <%= form.radio_button :gender, key, class: 'ms-5 form-check-input fs-3'%> <%= key.humanize %>
                <% end %>
              </div>

              <div class='col-12 mb-7'>
                <%= form.label 'Contact Number: ', class: 'form-label fs-3'%>
                <%= form.text_field :contact_number, class: 'form-control fs-3', placeholder: '(+63) 9612337412'%>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-12 d-flex align-items-center justify-content-between mt-4">
    <%= link_to 'Cancel', dashboard_physicians_path, class: 'btn btn-light btn-sm fs-3' %>
    <%= form.submit 'Save', class: 'btn btn-primary btn-sm fs-3'%>
  </div>
<% end %>

